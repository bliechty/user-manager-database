div#display-by-category
    form(class="pure-form", id="displayUsers", method="POST")
        span Display users by
        select(
            id="user-category"
            class="user-input",
            onchange="this.form.submit()",
            name="user-category"
        )
            option(value="_id") date created
            option(value="first") first name
            option(value="last") last name
            option(value="age") age
            option(value="emailAddress") email address
        span in
        select(
            id="user-order",
            class="user-input",
            onchange="this.form.submit()",
            name="user-order"
        )
            option ascending
            option descending
        span order

div#search
    form(class="pure-form", method="POST")
        input(
            type="text",
            class="pure-input-rounded",
            name="search-input"
        )
        button(
            type="submit"
            class="pure-button pure-button-primary user-input"
        ) Search
        span (Search by first name, last name, email, and age)

div#reset-all
    a(href="/userList", class="pure-button") Reset All